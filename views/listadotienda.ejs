   <div class="container">     <h1>Llistado de Tiendas</h1>
      <div  eblclass="container">    
        <a href="/createtienda" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle bx-md'></i></a>    
      <table class="table table-bordered table-striped text-center mt-4 table-responsive-xl table-responsive-md table-responsive-sm">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">ID_T</th>
            <th scope="col">NOMBRE</th>
            <th scope="col">SUCURSAL</th>            
            <th scope="col">DIRECCION</th>     
            <th scope="col">CIUDAD</th>  
            <th scope="col">REGION</th>           
            <th scope="col">ACCIONES</th>         
          </tr>
        </thead>
        <tbody>
          <% resultst.forEach((tienda)=>{ %>
            <tr>  
                <td><%= tienda.id_t %></td>  
                <td><%= tienda.nombret %></td>
                <td><%= tienda.sucursal %></td>  
                <td><%= tienda.direccion %></td>
                <td><%= tienda.ciudad %></td>
                <td><%= tienda.region %></td>
                <td>
                  <a href="/edittienda/<%= tienda.id_t %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/deletetienda/<%= tienda.id_t %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
      </div>
    </div>

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>    
