      <div class="container">
      <div class="container mt-4">     
            <div class="card border-secondary">  
                <div class="card-header">Nuevo Registro de Producto</div>
                <div class="card-body">
                    <form action="/saveproducto" method="POST">
                         <div class="mb-3">
                        <label for="nombrep" class="form-label">Nombre de la producto</label>
                        <input type="text" class="form-control" id="nombrep" name="nombrep" tabindex="1">
                        </div>   
                        <div class="mb-3">
                        <label for="presupuesto" class="form-label">Presupuesto</label>
                        <input type="number" class="form-control" id="presupuesto" name="presupuesto" tabindex="2">
                        </div>  
                        <div class="mb-3">
                          <label for="costoreal" class="form-label">Costo Real</label>
                          <input type="number" class="form-control" id="costoreal" name="costoreal" tabindex="3">
                        </div> 
                        <div class="mb-3">
                          <label for="nota" class="form-label">Nota</label>
                          <input type="text" class="form-control" id="nota" name="nota" tabindex="4">
                        </div> 

                        <!-- ----------------------------------ACA DEBO MOSTRAR LA VISTA DE BD------------------------------------------------ -->
                     
                        <div class="mb-3">
                            <label for="tienda" class="form-label">Tienda</label>
                            <select id="tienda" name="tienda" class="form-select" aria-label="Default select example" tabindex="5">
                                <% tiendas.forEach((tienda)=>{ %>  
                                    <option value="<%= tienda.nombret  %>" selected><%= tienda.nombret  %></option>
                                <% }) %>   
                                    
                            </select>
                            </div>  
                        
                        <!-- ----------------------------------ACA DEBO MOSTRAR LA VISTA DE BD------------------------------------------------ -->
                                                      
                        <button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
                        <a href="/producto" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>        
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    </div>

    </body>
